<h1 align="center"> Signup</h1>
 
<div class="row">
  <div class="col-xs-12">

   <%= form_for( resource, as: resource_name, url: users_signup_path, :html =>{class: "form-horizontal",role: "form" }) do |form| %>
   <div class="form-group">
      <div class="control-label col-sm-2">
  
         <%= form.label :name %>
     </div>
     <div class="col-sm-8">
    <%= form.text_field :name,class: "form-control",placeholder: "Your Name", autofocus: true %>
     </div>
     </div>

     <div class="form-group">
      <div class="control-label col-sm-2">
  
      <%= form.label :email %>
    </div>
    <div class="col-sm-8">
      <%= form.email_field :email , class: "form-control",placeholder: "Your Email" %>
     </div>
   </div>
   <div class="form-group">
      <div class="control-label col-sm-2">
  
      <%= form.label :password %>
    </div>
    <div class="col-sm-8">
      <%= form.password_field :password , class: "form-control",placeholder: "Your Password" %>
     </div>
   </div>
 <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= form.submit "Sign up",class: 'btn btn-primary btn-lg' %>
	<p style="font-size:120%"><strong>Already have an account? </strong><a href='/users/signin'>Click Here to login</a></p>
	</div>
</div>
<% end %> 

</div>
</div>
